<% if current_user %>
  <h1>Hello <%= current_user.email %></h1>
<% end %>
<!-- <h2><%= @message %></h2> -->
    <section>
      <div class="row">

        <% @tutorials.each do |tutorial| %>

          <div class="col-sm-4">
            <div class="tutorial_single">
              <a href="/tutorials/<%= tutorial.id %>"><h2 class="tutorial_header"><%= tutorial.title %></h2></a>
              <p>Description: <%= tutorial.description %></p>
              <p>Type: <%= tutorial.tutorial_type%></p>
              <p>Weight requirements: <%= tutorial.weights%></p>
              <p>Experience required: <%= tutorial.experience%></p>
              <p>Equipments Needed: <%= tutorial.equipment%></p>       
              <p>Equipment Description for usage: <%= tutorial.equipment_description%></p>

            </div>
          </div>
        <% end %>

      </div>
    </section>
