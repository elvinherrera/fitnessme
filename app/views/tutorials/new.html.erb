    <%= text_field_tag :description, @tutorial.description %>
  </li>
  <li>
    <%= label_tag :tutorial_type %>
    <%= text_field_tag :tutorial_type, @tutorial.tutorial_type %>
  </li>
  <li>
    <%= label_tag :weights %>
    <%= check_box :weights, @tutorial.weights %>
  </li>
  <li>
    <%= label_tag :equipment %>
    <%= text_field_tag :equipment, @tutorial.equipment %>
  </li>
  <li>
    <%= label_tag :equipment_description %>
    <%= text_field_tag :equipment_description, @tutorial.equipment_description %>
  </li>
